<Window Name="TitleWindow"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Plasma_Cipher.MainWindow"
        Title="Plasma_Cipher">
    <Grid Background="#000042"
          ColumnDefinitions="*,*,*"
          RowDefinitions="0.3*,*,0.4*,0.4*,0.4*"
          ShowGridLines="false">

          <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                     Background="SkyBlue" Foreground="White" Text="Plasma Cypher" FontSize="50" FontWeight="Bold" TextAlignment="Center" />
          <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
                     Foreground="White" Text="Do you Want To Encrypt or Decrypt a message" FontSize="25" TextAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap"/>
    </Grid>
</Window>

